#include <stdio.h>
int main() {
    int cpeca1;
    int cpeca2;
    int numerop1;
    int numerop2;
    double valor1;
    double valor2;
    double valorf;
    scanf("%d %d %lf",&cpeca1,&numerop1,&valor1);
    scanf("%d %d %lf",&cpeca2,&numerop2,&valor2);
    valorf=numerop1*valor1+numerop2*valor2;
    printf("VALOR A PAGAR: R$ %.2lf\n",valorf);
    return 0;
}
