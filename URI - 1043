#include <stdio.h>
int main() {
    double a, b, c;
    double perimetro, area;
    scanf ("%lf %lf %lf", &a, &b, &c);
    perimetro = a + b + c;
    area = ((a + b) * c) / 2;
    if ((b - c) < a && a < (b + c) && (a - c) < b && b < (a + c) && (a - b) < c && c < (a + b)){
        printf ("Perimetro = %.1lf\n", perimetro);
    }
    else{
        printf ("Area = %.1lf\n", area);
    }
    return 0;
}
